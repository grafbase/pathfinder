{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly"
  ],
  "packageRules": [
    {
      "groupName": "dependencies-major",
      "matchUpdateTypes": ["major"],
      "excludePackageNames": ["node", "@types/node"]
    }
  ],
  "ignoreDeps": ["@ladle/react", "monaco-editor", "monaco-graphql", "vitest"]
}
